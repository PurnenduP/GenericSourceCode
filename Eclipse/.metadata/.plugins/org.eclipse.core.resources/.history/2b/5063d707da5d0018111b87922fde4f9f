import java.util.Stack;
public class THanoi {

	int[] source;
	int[] dest;
	int[] helper;
	
	
	int size;
	
	THanoi(int size)
	{
		this.size = size;
		source = new int[size];
		dest = new int[size];
		helper = new int[size];
		
		for(int i =0;i<size;i++)
		{
			source[i]= size-i;
		}
	}
	
	
	
	
	public void display_all()
	{
		display("x",source);
		display("y",dest);
		display("z",helper);
		
	}
	
//	public int[] copyStack(int[] a)
//	{
//		int temp[] = new int[size];
//		while(!a.isEmpty())
//		{
//			
//		}
//		return temp;
//	}
	
	public void display(String name,int[] arr)
	{
		if(name=="")
		{name="Unknown";}
		System.out.print(name+"=");
		while(!arr.isEmpty())
		{
			System.out.print(arr.pop());
			if(!arr.isEmpty())
			{System.out.print(",");}
			
		}
		System.out.println();
	}
	
	public void SolveTowerOfHanoi(int n,int[] x,int[] y,int[] z)
	{
		if(n>=1)
		{
			SolveTowerOfHanoi(n-1,x,z,y);
			int temp = x.pop();
			y.push(temp);
//			display_all();
			SolveTowerOfHanoi(n, z, y, x);			
		}
		
	}
	
	public static void main(String[] args)
	{
		THanoi t = new THanoi(3);
		
		t.SolveTowerOfHanoi(t.size, t.source, t.dest, t.helper);
//		t.display("source",t.source);
//		t.display("dest",t.dest);
//		t.display("helper",t.helper);
	}
	
}
